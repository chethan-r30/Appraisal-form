<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <!-- Header Row 1 -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Teaching Learning Activities"
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Header Row 2 -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Parameter"
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Self-Evaluation"
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Data Rows -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Lectures Taken as percentage of lectures allocated as per academic calendar"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row1UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Tutorials, practical, contact hours undertaken as percentage of those actual allocated as per academic calendar:"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row2UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Extra lectures, remedial lectures, practical, or other teaching duties in excess of AICTE/DSCE norms per week for entire semester or proportional otherwise:"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row3UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Semester End Examination duties (question paper setting, evaluation of answer scripts, etc.) as per duties allotted:"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row4UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Internal examination/Evaluation duties for internal/continuous assessment work as allotted."
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row5UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Use of innovative teachingâ€“learning methodologies:"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row6UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <!-- Header Row 9 -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Student Centric Parameters"
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Self-Evaluation"
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Attendance of Students Above 85%"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row10UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Student Feedback (TH/PR)"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row11UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Results of students (TH/PR)"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/row12UserInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:hint="Input" />
                </TableRow>

            </TableLayout>

            <!-- Button -->
            <Button
                android:id="@+id/buttonNavigateToFourthPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Page"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</HorizontalScrollView>
